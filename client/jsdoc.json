{
    "source": {
        "include": ["src/"], 
        "includePattern": ".(js|jsx)$",
        "excludePattern": "(node_modules/|docs/)"
    },
    "opts": {
        "destination": "docs/",
        "recurse": true
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    }
}